package actions;

import javax.swing.JOptionPane;

import user2.pages.Pageherit;
import user2.pages.Pageprincipale;

public class connexion {
	boolean connectok;  
	public static Pageherit fenetre;

	public static Pageprincipale fenetreprincipale;

	public connexion(){
		fenetreprincipale = new Pageprincipale();
		connectok=false
	}
	public void validation(){
		if(connectok == true)
		{
			fenetre.setVisible(false);
			fenetreprincipale.setVisible(true);
			
		}
		else
			JOptionPane.showMessageDialog(fenetre, "Mauvais mot de passe ou mail");
	}
	
}
