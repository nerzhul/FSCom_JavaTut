package windows.window;

import java.awt.Dimension;
import java.awt.GridLayout;
import java.awt.event.KeyEvent;

import javax.swing.JButton;
import javax.swing.JComponent;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JScrollPane;
import javax.swing.JTabbedPane;
import javax.swing.JTextArea;

import windows.actions.Bouton_envoi;
import windows.actions.Surveillance_clavier;

public class onglets extends JFrame{

	private JFrame fram;
	public onglets(Object interlocuteur) {
		// TODO Auto-generated constructor stub
		buildpage();
		buildfenetre(interlocuteur);
	}

	private void buildpage() {
		fram = new JFrame();
		fram.setSize(new Dimension(200,200));
		fram.setTitle("Cookie Messenger - Conversation"); 
		fram.setSize(600,400); 
		fram.setLocationRelativeTo(null);
		fram.setResizable(true);
		fram.setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE); 
		
	}

	public static void buildfenetre(Object interlocuteur){	       
        /*Titre = new JLabel("Fenetre de conversation avec "+interlocuteur,JLabel.CENTER);
        Titretxt = new JLabel ("Entrez ici le texte Ã  envoyer : ");
        textprincipal = new JTextArea(15,50);
        textprincipal.setEditable(false);
        textprincipal.setLineWrap(true); 
        textaenvoyer = new JTextArea(3,50);
        textaenvoyer.addKeyListener(new Surveillance_clavier(interlocuteur,textaenvoyer,textprincipal));
        textaenvoyer.setLineWrap(true); 
        envoi=new JButton("Envoyer !");
		envoi.addActionListener(new Bouton_envoi(interlocuteur,textaenvoyer,textprincipal));
		
        pan.add(Titre); 
        pan.add(textprincipal);
        JScrollPane scrollprincipal = new JScrollPane(textprincipal);
        pan.add(scrollprincipal);
        pan.add(Titretxt);
        pan.add(textaenvoyer);
        JScrollPane scrollenvoi = new JScrollPane(textaenvoyer);        
        pan.add(scrollenvoi);
        pan.add(envoi);*/
		
		
		
		JTabbedPane tabbedPane = new JTabbedPane();
        
        JComponent panel1 = makeTextPanel("Fenetre de conversation avec "+interlocuteur);
        
        JTextArea textprincipal = new JTextArea(15,50);
        textprincipal.setEditable(false);
        textprincipal.setLineWrap(true); 
        JTextArea textaenvoyer = new JTextArea(3,50);
        textaenvoyer.addKeyListener(new Surveillance_clavier(interlocuteur,textaenvoyer,textprincipal));
        textaenvoyer.setLineWrap(true); 
        JButton envoi = new JButton("Envoyer !");
		envoi.addActionListener(new Bouton_envoi(interlocuteur,textaenvoyer,textprincipal));
		panel1.add(textprincipal);
        JScrollPane scrollprincipal = new JScrollPane(textprincipal);
        panel1.add(scrollprincipal);
        panel1.add(textaenvoyer);
        JScrollPane scrollenvoi = new JScrollPane(textaenvoyer);        
        panel1.add(scrollenvoi);
        panel1.add(envoi);
        
        tabbedPane.addTab("(String) interlocuteur", panel1);
        tabbedPane.setMnemonicAt(0, KeyEvent.VK_1);
        
        //Add the tabbed pane to this panel.
        fram.add(tabbedPane);
        
        //The following line enables to use scrolling tabs.
        tabbedPane.setTabLayoutPolicy(JTabbedPane.SCROLL_TAB_LAYOUT);

        setVisible(true);
	}
	
	  protected static JComponent makeTextPanel(String text) {
	        JPanel panel = new JPanel(false);
	        JLabel filler = new JLabel(text);
	        filler.setHorizontalAlignment(JLabel.CENTER);
	        panel.setLayout(new GridLayout(1, 1));
	        panel.add(filler);
	        return panel;
	    }
}
