package windows.actions;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JComboBox;
import javax.swing.JFrame;
import javax.swing.JOptionPane;
import javax.swing.JTextField;

import windows.window.form_contact;

public class Bouton_connect implements ActionListener {
	//contenuUser() et contenuPass();
	private JFrame fenetre;
	private Object status;
	private String pseudo;
	public Bouton_connect(JFrame fram, JComboBox statusco, JTextField mail) {
		fenetre=fram;
		this.status=statusco.getSelectedItem();
		this.pseudo=mail.getText();
	}
	
	public void actionPerformed(ActionEvent e) {

		//verif login-->server
		boolean connectok=true;
		if(connectok == true)
		{
			System.out.println(status +"-"+ pseudo);
			
			
			fenetre.dispose();
			new form_contact();
		}
		else{
			JOptionPane.showMessageDialog(fenetre, "Mauvais mot de passe ou mail");
		}
			

	}

}
