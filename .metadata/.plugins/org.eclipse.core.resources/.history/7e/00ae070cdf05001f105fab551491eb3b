package user2.pageheritage;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JFrame;
import javax.swing.JMenu;
import javax.swing.JMenuBar;
import javax.swing.JMenuItem;
import javax.swing.JPanel;

import user2.menu.*;
import user2.pageconnec.*;

import msn.pageacceuil.*;

public class Page extends JFrame implements ActionListener
{
	private static final long serialVersionUID = 42L;
	
	public Page()
	{	super();
		}
	
	protected JPanel Pageglobale()
	{
		JPanel panel = new JPanel();
		
		JMenuBar menuBar = new JMenuBar();
		
		JMenu menu1 = new JMenu("Menu");
		
	
		
		if (this instanceof Pageacceuil)
		{
			JMenuItem Connexion = new JMenuItem(new Connexion(this,"Connexion"));
			menu1.add(Connexion);
		}
		else
		 	if (this instanceof Pageconnect√©)
			{
				JMenuItem Deconnexion = new JMenuItem(new Deconnexion(this,"Deconnexion"));
				menu1.add(Deconnexion);
			} 
			
		JMenuItem quitter = new JMenuItem(new QuitterAction("Quitter"));
		menu1.add(quitter);
		menuBar.add(menu1);
		
		JMenu menu2 = new JMenu("?");
		JMenuItem aPropos = new JMenuItem(new APropos(this, "A propos"));
		menu2.add(aPropos);
			menuBar.add(menu2);
		setJMenuBar(menuBar);
		
		return panel;
	}


		@Override
		public void actionPerformed(ActionEvent e) 
		{
			// TODO Auto-generated method stub
		}
}