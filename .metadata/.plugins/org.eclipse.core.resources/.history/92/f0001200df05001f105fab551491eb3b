package msn.menu;

import java.awt.event.ActionEvent;

import javax.swing.AbstractAction;
import javax.swing.JOptionPane;

import msn.pageconnec.Pageconnecté;
import msn.pageheritage.Page;

	
				public class Connexion extends AbstractAction 
				{
				
					private static final long serialVersionUID = 3L;


					public static Pageconnecté fenetreconnectée = new Pageconnecté();

								
					private Page fenetre;
					
					public Connexion(Page page, String texte){
						super(texte);
						
						this.fenetre = page;
					}
					
					public void actionPerformed(ActionEvent e)
					{ 
						//TODO : test d'adresse mail et mot de passe avec Jabber
						
						boolean connecok=true;  
							
						if(connecok == true)
						{
							fenetre.setVisible(false);
							fenetreconnectée.setVisible(true);
							
						}
						else
							JOptionPane.showMessageDialog(fenetre, "Mauvais mot de passe ou mail");
					}
				}