package windows.actions;

import java.awt.TextArea;
import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;

public class Surveillance_clavier implements KeyListener {

	private Object contact;
	private TextArea text;

	public Surveillance_clavier(Object interlocuteur, TextArea textaenvoyer) {
		this.contact=interlocuteur;
		this.text=textaenvoyer;
	}

	@Override
	public void keyReleased(KeyEvent e) {
		if (e.getKeyCode() == KeyEvent.VK_ENTER){
			 new Bouton_envoi(contact,text);
		     System.out.print("kikoo");
		 }
	}

	@Override
	public void keyTyped(KeyEvent e) {
		// TODO Auto-generated method stub

	}

	@Override
	public void keyPressed(KeyEvent e) {
		// TODO Auto-generated method stub
		
	}

}
