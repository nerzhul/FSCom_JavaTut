			panel.add(mail);

			//on cree le second champ demandant le mot de passe avec un champ password
			label2 = new JLabel("Mot de passe");
			panel.add(label2);
			password = new JPasswordField(15);
			panel.add(password);	
	
			connect=new JButton("Connexion");
			panel.add(connect);
			
			return panel;
		}
		
