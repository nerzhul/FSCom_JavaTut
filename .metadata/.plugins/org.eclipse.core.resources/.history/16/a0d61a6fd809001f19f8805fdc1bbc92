package windows.window;

import java.awt.Color;
import java.awt.Dimension;
import java.awt.FlowLayout;
import java.awt.TextArea;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;

import windows.actions.Bouton_envoi;
import windows.actions.Surveillance_clavier;

@SuppressWarnings("serial")
public class form_conversation_avec extends JFrame{
	
	private Object interlocuteur;
	private JPanel pan;
	private JLabel Titre;
	private JLabel Titretxt;
	private TextArea textprincipal;
	private TextArea textaenvoyer;
	private JButton envoi;

	public form_conversation_avec(Object contact){
		this.interlocuteur=contact;
		buildfenetre();	
	}

	private void buildfenetre(){
		
		setSize(new Dimension(200,200));
		setTitle("Cookie Messenger - Conversation"); 
		setSize(600,400); 
		setLocationRelativeTo(null);
		setResizable(true);
		setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE); 
		
        pan=new JPanel();              
        pan.setBackground(new Color(128,128,255));
        pan.setLayout(new FlowLayout(FlowLayout.CENTER));   
        
        Titre = new JLabel("Fenetre de conversation avec "+interlocuteur,JLabel.CENTER);
        Titretxt = new JLabel ("Entrez ici le texte Ã  envoyer : ");
        textprincipal = new TextArea(15,60);
        textprincipal.setEditable(false);
        ((Object) textprincipal).setLineWrap(true); 
        textaenvoyer = new TextArea(3,50);
        textaenvoyer.addKeyListener(new Surveillance_clavier(interlocuteur,textaenvoyer,textprincipal));
        envoi=new JButton("Envoyer !");
		envoi.addActionListener(new Bouton_envoi(interlocuteur,textaenvoyer,textprincipal));
        
        pan.add(Titre); 
        pan.add(textprincipal);
        pan.add(Titretxt);
        pan.add(textaenvoyer);
        pan.add(envoi);
        setContentPane(pan);        
        setVisible(true);
	}
	
	public TextArea getText(){
		return this.textaenvoyer;
	}
	
}
