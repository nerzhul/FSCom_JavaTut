package windows.actions;

import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;

import javax.swing.JTextArea;

import session.objects.contact;

import windows.actions.buttons.sendmsg_button;

public class Surveillance_clavier implements KeyListener {

	private contact contact;
	private JTextArea text;
	private JTextArea box;
	//suprimer box

	public Surveillance_clavier(contact interlocuteur, JTextArea textaenvoyer, JTextArea textprincipal) {
		this.contact=interlocuteur;
		this.text=textaenvoyer;
		this.box=textprincipal;
	}

	@Override
	public void keyReleased(KeyEvent e) {
		if (e.getKeyCode() == KeyEvent.VK_ENTER){
			 String text2 = box.getText();
			//envoi du message contenu dans "text" a "contact"
			text2.setText("");
			box.setText(box.getText()+"J'ai écrit : "+text);
		     System.out.print("touche entrer appuyé");
		 }
	}

	@Override
	public void keyTyped(KeyEvent e) {
		// TODO Auto-generated method stub

	}

	@Override
	public void keyPressed(KeyEvent e) {
		// TODO Auto-generated method stub
		
	}

}
