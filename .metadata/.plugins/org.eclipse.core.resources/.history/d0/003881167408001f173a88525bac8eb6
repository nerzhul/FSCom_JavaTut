	@Override
	public void mouseReleased(MouseEvent e) {
		// TODO Auto-generated method stub
		Object contact = liste.getSelectedValue();
		// on crée le menu surgissant
	       final JPopupMenu menu;
	       menu = new JPopupMenu();
	// on crée et ajoute des items au menu
	       JMenuItem select = new JMenuItem();
	       menu.add((JMenuItem) contact);
	       menu.add("copier");
	       menu.add("coller");
	       menu.add("select");
	// évènement pour que le menu apparaisse au clique droit de la sourie, attaché au curseur
	              menu.show (e.getComponent(),e.getX(),e.getY());
	       
